<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loại sản phẩm: "
            android:textStyle="bold"
            android:textSize="24dp"
            android:textColor="@color/black"/>
        <Spinner
            android:id="@+id/spChonLoaiSanPham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <EditText
        android:id="@+id/edtThemTenSanPham"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/edittextvienhong"
        android:layout_margin="5dp"
        android:hint="Nhập tên sản phẩm"
        android:layout_marginTop="15dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/edAnhSP"
            android:layout_width="115dp"
            android:layout_height="108dp"
            android:src="@drawable/avatar" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ảnh sản phẩm"
                android:textSize="15dp" />

            <Button
                android:id="@+id/btnUploadImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Up load ảnh"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

<!--    <EditText-->
<!--        android:id="@+id/edtThemAnhSanPham"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="55dp"-->
<!--        android:background="@drawable/edittextvienhong"-->
<!--        android:layout_margin="5dp"-->
<!--        android:hint="Nhập ảnh sản phẩm"-->
<!--        android:layout_marginTop="15dp"/>-->

    <EditText
        android:id="@+id/edtThemGiaSanPham"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/edittextvienhong"
        android:layout_margin="5dp"
        android:hint="Nhập giá sản phẩm"
        android:layout_marginTop="15dp"/>
    <EditText
        android:id="@+id/edtThemGiamGia"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/edittextvienhong"
        android:layout_margin="5dp"
        android:hint="Nhập giảm giá"
        android:layout_marginTop="15dp"/>
    <EditText
        android:id="@+id/edtThemSoLuongTrongKho"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/edittextvienhong"
        android:layout_margin="5dp"
        android:hint="Nhập số lượng trong kho"
        android:layout_marginTop="15dp"/>
    <EditText
        android:id="@+id/edtThemNgaySanXuat"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/edittextvienhong"
        android:layout_margin="5dp"
        android:hint="Nhập ngày sản xuất"
        android:inputType="none"
        android:focusable="false"
        android:clickable="false"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/edtThemHanSuDung"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/edittextvienhong"
        android:layout_margin="5dp"
        android:hint="Nhập hạn sử dụng"
        android:inputType="none"
        android:focusable="false"
        android:clickable="false"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp">
        <Button
            android:layout_weight="1"
            android:id="@+id/btnDialogHuyThemSanPham"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittextvienhong"
            android:text="Hủy"/>
        <Button
            android:layout_weight="1"
            android:id="@+id/btnDialogThemSanPham"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thêm"
            android:background="@drawable/edittextvienhong"
            android:layout_marginLeft="15dp"/>
    </LinearLayout>

</LinearLayout>